<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/about_autor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:gravity="center_horizontal"
        android:text="@string/about_autor"
        android:textSize="@dimen/text" />

    <TextView
        android:id="@+id/texto_cc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/about_version"
        android:layout_below="@+id/imagen_cc"
        android:gravity="center_horizontal"
        android:text="@string/cc_licencia"
        android:textSize="@dimen/text"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textSize="@dimen/title1" />

    <TextView
        android:id="@+id/about_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/about_autor"
        android:layout_below="@+id/about_autor"
        android:gravity="center_horizontal"
        android:text="@string/about_version"
        android:textSize="@dimen/text" />

    <ImageView
        android:id="@+id/imagen_cc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/app_title"
        android:layout_below="@+id/about_version"
        android:layout_marginTop="17dp"
        android:src="@drawable/commons" />

</RelativeLayout>